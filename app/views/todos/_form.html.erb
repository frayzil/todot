<%= form_with(model: todo, local: true) do |form| %>
  <% if todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
      <% todo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title, placeholder: 'Add a new todo ...', class: 'form-control', data: { reflex: "change->TodosReflex#validate" } %>
  </div>

  <div class="form-group" style="display: flex; flex-direction: horizontal; justify-content: space-between;">
    <%= form.datetime_select :due_at, class: 'form-control' %>
  </div>

  <div class="form-group" style="display: flex; flex-direction: horizontal; justify-content: space-between;">
    <%= link_to "Cancel", todos_path, class: "btn btn-link" %>

    <% if todo.persisted? %>
      <%= link_to 'Destroy', todo, method: :delete, class: "btn btn-outline-danger", data: { confirm: 'Are you sure?' } %>
    <% end %>

    <%= form.submit class: 'btn btn-primary btn-sm' %>
  </div>
<% end %>
